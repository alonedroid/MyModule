<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="alonedroid.com.mymodule.scene.custom_view.CustomViewActivity">

    <alonedroid.com.mymodule.scene.custom_view.CustomIndicatorView_
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <TextView
        android:id="@+id/prev"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/indicator"
        android:layout_alignParentLeft="true"
        android:background="@color/sp_byakugun_pare"
        android:clickable="true"
        android:gravity="center"
        android:text="前へ"
        android:textColor="@color/white_300"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/indicator"
        android:layout_centerInParent="true"
        android:background="@color/sp_byakugun"
        android:clickable="true"
        android:gravity="center"
        android:text="追加"
        android:textColor="@color/white_300"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/indicator"
        android:layout_alignParentRight="true"
        android:background="@color/sp_chartreuse"
        android:clickable="true"
        android:gravity="center"
        android:text="次へ"
        android:textColor="@color/white_300"
        android:textSize="30sp"
        />
</RelativeLayout>
